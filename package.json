{
  "name": "@oddlaceguy49/steam-web-api-types",
  "version": "0.1.2",
  "description": "A comprehensive set of TypeScript type definitions for the raw Steam Web API.",
  "module": "index.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "// --- GENERATOR SCRIPTS ---": "",
    "pregen": "node -e \"require('fs').rmSync('src/generated', { recursive: true, force: true })",
    "gen-script": "bun run scripts/generateSchemas.ts",
    "gen:types": "bun run gen-script types",
    "gen:zod": "bun run gen-script zod",
    "gen:typebox": "bun run gen-script typebox",
    "gen:valibot": "bun run gen-script valibot",
    "gen:yup": "bun run gen-script yup",
    "gen:effect": "bun run gen-script effect",
    "gen:jsonschema": "bun run gen-script jsonschema",
    "// --- MAIN BUILD SCRIPT ---": "",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "gen": "echo 'Running all schema generators...' && bun run pregen && bun run gen:types && bun run gen:zod && bun run gen:typebox && bun run gen:valibot && bun run gen:yup && bun run gen:effect && bun run gen:jsonschema",
    "build": "bun run gen && bun run build:types"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@effect/schema": "^0.75.5",
    "@sinclair/typebox-codegen": "^0.11.1",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.15",
    "bun-types": "^1.2.18",
    "effect": "^3.16.16",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "lefthook": "^1.12.2",
    "ts-morph": "^26.0.0",
    "ts-to-zod": "^3.15.0",
    "typebox": "^0.0.1",
    "typescript": "^5.8.3",
    "ultracite": "^5.0.46",
    "valibot": "^1.1.0",
    "yup": "^1.6.1",
    "zod": "^4.0.5"
  },
  "exports": {
    "./*": {
      "types": "./dist/types/*/index.d.ts"
    },
    "./*/details": {
      "types": "./dist/types/*/details.d.ts"
    },
    "./zod/*": {
      "types": "./dist/zod/*/index.d.ts"
    },
    "./zod/*/details": {
      "types": "./dist/zod/*/details.d.ts"
    },
    "./typebox/*": {
      "types": "./dist/typebox/*/index.d.ts"
    },
    "./typebox/*/details": {
      "types": "./dist/typebox/*/details.d.ts"
    },
    "./valibot/*": {
      "types": "./dist/valibot/*/index.d.ts"
    },
    "./valibot/*/details": {
      "types": "./dist/valibot/*/details.d.ts"
    },
    "./yup/*": {
      "types": "./dist/yup/*/index.d.ts"
    },
    "./yup/*/details": {
      "types": "./dist/yup/*/details.d.ts"
    },
    "./effect/*": {
      "types": "./dist/effect/*/index.d.ts"
    },
    "./effect/*/details": {
      "types": "./dist/effect/*/details.d.ts"
    },
    "./package.json": "./package.json"
  },
  "peerDependencies": {
    "@effect/schema": "^0.75.5",
    "effect": "^3.16.16",
    "typebox": "^0.0.1",
    "valibot": "^1.1.0",
    "yup": "^1.6.1",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "typebox": {
      "optional": true
    },
    "valibot": {
      "optional": true
    },
    "yup": {
      "optional": true
    },
    "effect": {
      "optional": true
    },
    "@effect/schema": {
      "optional": true
    }
  }
}