{
  "name": "@oddlaceguy49/steam-web-api-types",
  "version": "0.1.0",
  "description": "A comprehensive set of TypeScript type definitions for the raw Steam Web API.",
  "module": "index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "// --- GENERATOR SCRIPTS ---": "",
    "gen:zod": "bun run scripts/generateZod.ts",
    "gen:typebox": "typebox-codegen --input src/types --output src/typebox",
    "// --- MAIN BUILD SCRIPT ---": "",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "gen": "echo 'Running all schema generators...' && bun run gen:zod && bun run gen:typebox",
    "build": "bun run gen && bun run build:types"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@sinclair/typebox-codegen": "^0.11.1",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.14",
    "bun-types": "^1.2.18",
    "glob": "^11.0.3",
    "ts-to-zod": "^3.15.0",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./zod": {
      "import": "./dist/zod.js",
      "types": "./dist/zod.d.ts"
    }
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "dependencies": {
    "@oclif/core": "^4.5.1"
  }
}