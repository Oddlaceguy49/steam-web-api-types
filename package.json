{
  "name": "@oddlaceguy49/steam-web-api-types",
  "version": "0.1.0",
  "description": "A comprehensive set of TypeScript type definitions for the raw Steam Web API.",
  "module": "index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "// --- GENERATOR SCRIPTS ---": "",
    "gen-script": "bun run scripts/generateSchemas.ts",
    "gen:zod": "bun run gen-script zod",
    "gen:typebox": "bun run gen-script typebox",
    "gen:valibot": "bun run gen-script valibot",
    "gen:yup": "bun run gen-script yup",
    "gen:arktype": "bun run gen-script arktype",
    "gen:effect": "bun run gen-script effect",
    "gen:jsonschema": "bun run gen-script jsonschema",
    "// --- MAIN BUILD SCRIPT ---": "",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "gen": "echo 'Running all schema generators...' && bun run gen:zod && bun run gen:typebox && bun run gen:valibot && bun run gen:yup && bun run gen:arktype && bun run gen:effect && bun run gen:jsonschema",
    "build": "bun run gen && bun run build:types"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@sinclair/typebox-codegen": "^0.11.1",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.14",
    "bun-types": "^1.2.18",
    "glob": "^11.0.3",
    "lefthook": "^1.12.2",
    "ts-to-zod": "^3.15.0",
    "typescript": "^5.8.3",
    "ultracite": "^5.0.39"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./zod": {
      "import": "./dist/zod.js",
      "types": "./dist/zod.d.ts"
    },
    "./typebox": {
      "import": "./dist/typebox.js",
      "types": "./dist/typebox.d.ts"
    },
    "./valibot": {
      "import": "./dist/valibot.js",
      "types": "./dist/valibot.d.ts"
    },
    "./yup": {
      "import": "./dist/yup.js",
      "types": "./dist/yup.d.ts"
    },
    "./arktype": {
      "import": "./dist/arktype.js",
      "types": "./dist/arktype.d.ts"
    },
    "./effect": {
      "import": "./dist/effect.js",
      "types": "./dist/effect.d.ts"
    }
  },
  "peerDependencies": {
    "@effect/schema": "^0.75.5",
    "arktype": "^2.1.20",
    "effect": "^3.16.16",
    "typebox": "^0.0.1",
    "valibot": "^1.1.0",
    "yup": "^1.6.1",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "typebox": {
      "optional": true
    },
    "valibot": {
      "optional": true
    },
    "yup": {
      "optional": true
    },
    "arktype": {
      "optional": true
    },
    "effect": {
      "optional": true
    },
    "@effect/schema": {
      "optional": true
    }
  }
}